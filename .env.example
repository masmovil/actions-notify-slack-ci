# Copy this file to .env and fill in your actual values

# Required tokens
SLACK_ACCESS_TOKEN=xoxb-your-slack-bot-token-here
GITHUB_ACCESS_TOKEN=ghp_your_github_token_here

# Message delivery configuration
SEND_MESSAGE_TO_CHANNEL=general
SEND_MESSAGE_TO_USER=true

# Commit information (usually provided by GitHub Actions)
COMMIT_URL=https://github.com/your-org/your-repo/commit/abc123
COMMIT_AUTHOR_USERNAME=your-github-username
COMMIT_AUTHOR_EMAIL=your-email@example.com
COMMIT_MESSAGE=Your commit message here

# Status information (usually provided by GitHub Actions)
STATUS_NAME=CI Job Name
STATUS_DESCRIPTION=Build and test
STATUS_CONCLUSION=success
STATUS_URL=https://github.com/your-org/your-repo/actions/runs/123456

# GitHub Actions output (optional for local testing)
GITHUB_OUTPUT=/tmp/github_output.txt
